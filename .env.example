# ===========================================
# Birka TMA — Пример конфигурации (.env.example)
# ===========================================
# Скопируйте этот файл в .env и заполните значения

# Название проекта
PROJECT_NAME=Birka

# URL API (для production укажите реальный домен)
API_BASE_URL=https://your-domain.com
CORS_ORIGINS=["https://your-domain.com"]

# ===========================================
# PostgreSQL (Beget Cloud Database)
# ===========================================
# Формат: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
# Пример для Beget:
POSTGRES_DSN=postgresql+asyncpg://cloud_user:YOUR_PASSWORD@cuthjofilscamip.beget.app:5432/cloud_user

# Redis (если используется, иначе оставить пустым)
REDIS_DSN=

# ===========================================
# Telegram Bot
# ===========================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBAPP_SECRET=same_as_bot_token

# ===========================================
# S3 Storage (Beget S3)
# ===========================================
S3_ENDPOINT_URL=https://s3.ru1.storage.beget.cloud
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=00bd59427133-s3bot
S3_REGION=ru-1

# Публичный URL для доступа к файлам
FILE_PUBLIC_BASE_URL=https://s3.ru1.storage.beget.cloud/00bd59427133-s3bot

# ===========================================
# Внешние сервисы
# ===========================================
DADATA_TOKEN=your_dadata_api_key
OPENAI_API_KEY=sk-your-openai-key

# ===========================================
# Безопасность
# ===========================================
# Максимальный размер загружаемого файла (20 MB)
MAX_UPLOAD_SIZE_BYTES=20971520

# Telegram ID администраторов (через запятую)
ADMIN_TELEGRAM_IDS=[123456789]
