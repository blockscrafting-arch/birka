# Копировать в .env и заполнить. Не коммитить .env.

# === Обязательные для запуска ===
# PostgreSQL (async: postgresql+asyncpg://...)
POSTGRES_DSN=postgresql+asyncpg://user:password@host:5432/dbname

# Список Telegram ID админов через запятую (иначе админка недоступна)
ADMIN_TELEGRAM_IDS=123456789

# Бот Telegram для валидации WebApp
TELEGRAM_BOT_TOKEN=

# CORS (через запятую или *)
CORS_ORIGINS=*

# === Шифрование API-ключей компаний (Fernet, base64 url-safe) ===
# Генерация: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# === Опционально ===
# Путь к папке с RAG документами (по умолчанию /app/docs/rag)
DOCS_RAG_PATH=/app/docs/rag

# AI: OpenAI или OpenRouter
OPENAI_API_KEY=
OPENROUTER_API_KEY=
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini

# Dadata (подсказки адресов)
DADATA_TOKEN=

# S3 (Beget и др.): загрузка файлов, этикетки
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=ru-1
S3_BUCKET_NAME=
FILE_PUBLIC_BASE_URL=

# Лимит загрузки в байтах (по умолчанию 10 MB)
# MAX_UPLOAD_SIZE_BYTES=10485760

# === Локальная разработка фронта (Vite) ===
# VITE_API_URL=/api/v1
